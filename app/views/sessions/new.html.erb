<div class="login-container enhanced-login">
  <div class="login-form">
    <h2>Admin Girişi</h2>
    
    <%= form_with url: login_path, local: true, class: "form" do |form| %>
      <div class="form-group">
        <%= form.label :username, "Kullanıcı Adı:", class: "form-label" %>
        <%= form.text_field :username, class: "form-input", required: true %>
      </div>
      
      <div class="form-group">
        <%= form.label :password, "Şifre:", class: "form-label" %>
        <%= form.password_field :password, class: "form-input", required: true %>
      </div>
      
      <div class="form-actions">
        <%= form.submit "Giriş Yap", class: "submit-btn" %>
        <%= link_to "Ana Sayfaya Dön", root_path, class: "back-link" %>
      </div>
    <% end %>
  </div>
</div>